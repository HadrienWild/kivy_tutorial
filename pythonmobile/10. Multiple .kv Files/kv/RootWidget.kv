#:kivy 1.8.0

<RootWidget>:
	orientation: 'vertical'

	WhiteAnchor:
		anchor_x: 'left'
		anchor_y: 'top'

		SmallButton:
			text: "anchor_x: 'left'\nanchor_y: 'top'"

	VioletAnchor:
		anchor_x: 'center'
		anchor_y: 'top'
		
		SmallButton:
			text: "anchor_x: 'center'\nanchor_y: 'top'"

	WhiteAnchor:
		anchor_x: 'right'
		anchor_y: 'top'
		
		SmallButton:
			text: "anchor_x: 'right'\nanchor_y: 'top'"

	VioletAnchor:
		anchor_x: 'left'
		anchor_y: 'center'
		
		SmallButton:
			text: "anchor_x: 'left'\nanchor_y: 'center'"

	WhiteAnchor:
		anchor_x: 'center'
		anchor_y: 'center'
		
		SmallButton:
			text: "anchor_x: 'center'\nanchor_y: 'center'"

	VioletAnchor:
		anchor_x: 'right'
		anchor_y: 'center'
		
		SmallButton:
			text: "anchor_x: 'right'\nanchor_y: 'center'"

	WhiteAnchor:
		anchor_x: 'left'
		anchor_y: 'bottom'
		
		SmallButton:
			text: "anchor_x: 'left'\nanchor_y: 'bottom'"

	VioletAnchor:
		anchor_x: 'center'
		anchor_y: 'bottom'
		
		SmallButton:
			text: "anchor_x: 'center'\nanchor_y: 'bottom'"

	WhiteAnchor:
		anchor_x: 'right'
		anchor_y: 'bottom'
		
		SmallButton:
			text: "anchor_x: 'right'\nanchor_y: 'bottom'"
