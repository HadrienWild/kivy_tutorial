#:kivy 1.8.0

<VioletAnchor@AnchorLayout>:
	canvas:
		Color:
			rgba: [0.4, 0.2, 0.6, 1]
		Rectangle:
			pos: self.pos
			size: self.size

<WhiteAnchor@AnchorLayout>:
	canvas:
		Color:
			rgba: [1, 1, 1, 1]
		Rectangle:
			pos: self.pos
			size: self.size

<SmallButton@Button>:
	size_hint: [0.2, 0.4]
	font_size: 9


<RootWidget>:
	orientation: 'vertical'

	WhiteAnchor:
		anchor_x: 'left'
		anchor_y: 'top'

		SmallButton:
			text: "anchor_x: 'left'\nanchor_y: 'top'"

	VioletAnchor:
		anchor_x: 'center'
		anchor_y: 'top'
		
		SmallButton:
			text: "anchor_x: 'center'\nanchor_y: 'top'"

	WhiteAnchor:
		anchor_x: 'right'
		anchor_y: 'top'
		
		SmallButton:
			text: "anchor_x: 'right'\nanchor_y: 'top'"

	VioletAnchor:
		anchor_x: 'left'
		anchor_y: 'center'
		
		SmallButton:
			text: "anchor_x: 'left'\nanchor_y: 'center'"

	WhiteAnchor:
		anchor_x: 'center'
		anchor_y: 'center'
		
		SmallButton:
			text: "anchor_x: 'center'\nanchor_y: 'center'"

	VioletAnchor:
		anchor_x: 'right'
		anchor_y: 'center'
		
		SmallButton:
			text: "anchor_x: 'right'\nanchor_y: 'center'"

	WhiteAnchor:
		anchor_x: 'left'
		anchor_y: 'bottom'
		
		SmallButton:
			text: "anchor_x: 'left'\nanchor_y: 'bottom'"

	VioletAnchor:
		anchor_x: 'center'
		anchor_y: 'bottom'
		
		SmallButton:
			text: "anchor_x: 'center'\nanchor_y: 'bottom'"

	WhiteAnchor:
		anchor_x: 'right'
		anchor_y: 'bottom'
		
		SmallButton:
			text: "anchor_x: 'right'\nanchor_y: 'bottom'"
