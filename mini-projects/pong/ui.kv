#:kivy 1.8.0

################################## Classes ###################################

<Ball>:
	source: './images/ball.png'
	color: [0.61, 1, 0.97, 1]

	size_hint: [None, 0.05]
	width: self.height	# width = height = 5% * window_height


<Racket@Image>:
	size_hint: [0.04, 0.25]


<Score@Label>:
	color: [1, 1, 1, 0.7]
	font_size: 0.7 * self.height

############################# Root Widget Class ##############################

<PongGame>:
	racket_left: racket_left
	racket_right: racket_right
	ball: ball

	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'top'
		
		BoxLayout:
			size_hint: [0.75, 0.15]

			Score:
				text: str(root.left_player_score)

			Score:
				text: str(root.right_player_score)

	AnchorLayout:
		anchor_x: 'left'
		anchor_y: 'center'

		Racket:
			id: racket_left
			source: './images/racket_left.png'
			color: [0.94, 0.33, 0.93, 1]

	AnchorLayout:
		anchor_x: 'right'
		anchor_y: 'center'

		Racket:
			id: racket_right
			source: './images/racket_right.png'
			color: [1, 0.73, 0, 1]

	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'center'

		Ball:
			id: ball
