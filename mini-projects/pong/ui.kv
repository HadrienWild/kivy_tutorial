#:kivy 1.8.0

################################## Classes ###################################

<Ball>:
	size_hint: [None, 0.06]
	width: self.height	# width = height = 6% * window_height

	canvas:
		Color:
			rgb: [0, 1, 1]
		Ellipse:
			size: self.size
			pos: self.pos

<Racket>:
	size_hint: [0.04, 0.25]

	canvas:
		Color:
			rgb: [0, 1, 0]
		Rectangle:
			size: self.size
			pos: self.pos

<Score@Label>:
	color: [1, 1, 1, 0.7]
	font_size: 0.7 * self.height

############################# Root Widget Class ##############################

<PongGame>:
	racket_left: racket_left
	racket_right: racket_right
	ball: ball

	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'top'
		
		BoxLayout:
			size_hint: [0.75, 0.15]

			Score:
				text: str(root.left_player_score)

			Score:
				text: str(root.right_player_score)

	AnchorLayout:
		anchor_x: 'left'
		anchor_y: 'center'

		Racket:
			id: racket_left

	AnchorLayout:
		anchor_x: 'right'
		anchor_y: 'center'

		Racket:
			id: racket_right

	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'center'

		Ball:
			id: ball
